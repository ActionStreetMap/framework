canvas{
 material: Terrain;
}
/* ===== Placenames ===== */
node[place=town]										{ text: name; height: eval("tag('levels')"); }
node[place=city]										{ text: name; text-color: #534d38; text-halo-radius: 2; text-halo-color: white; font-size: 22; }

area[building]									{ text:addr:housenumber;text-color:red; z-index: -5; fill-color: lightgray; }

/* ===== Landuse ===== */
area[landuse=meadow], area[landuse=farmland], 
area[landuse=scrub], area[landuse=grass]						{ z-index: -5; fill-color: #E9EFDA; }
area[landuse=forest], area[natural=wood]						{ z-index: -4; fill-color: #8CD6B5; }
area[leisure=park]												{ z-index: -4; fill-color: #8CD6B5; }
area[landuse=residential]										{ z-index: -6; fill-color: #F9F8F5; }
area[natural=beach]												{ z-index: -4; fill-color: #FFF1BA; }
area[natural=water]												{ z-index: -3; fill-color: #a3c3ec;  }

/* ===== Water ==== */
area[natural=water]												{ z-index: -3; fill-color: #a3c3ec;  }
way[waterway]													{ z-index: -3; color: #a3c3ec; width: 1; }
way[waterway][name]												{ z-index: -2; text-color: white; text-position: line; font-size: 11; text: name; }
area[waterway=riverbank], area[waterway=dock]					{ z-index: -3; fill-color: #a3c3ec; }

/* ==== Railways === */
way[railway=rail]												{ color: darkgray;  z-index: 3; width: 1; }

/* ===== Roads (highway=*) ===== */
way[highway]													{ text-color: #534d38; text-position: line; text-halo-color: white; text-halo-radius: 1; }

/* colors and styles per highway type. */
way[highway=motorway],way[highway=motorway_link],
way[highway=trunk],way[highway=trunk_link],
way[highway=primary],way[highway=primary_link]					{ color: #E7C930; casing-color: #ddbb2b; casing-width: 1; z-index: 6; font-size: 14; text: name; }


/* pedestrian/cycleway styling */
way[highway=foot], way[highway=path], 
way[highway=footway]											{ color: gray; width: 1; dashes: 6,2; z-index: 3; }
way[highway=cycleway]											{ color: blue; width: 1; dashes: 2,2; z-index: 3; }

way[someclosed]:closed   										{width:1;}
